# 포트 설정 (vast.ai에서 할당받은 포트로 변경하세요)
PORT=5000

# 호스트 설정
HOST=0.0.0.0

# Flask 환경 설정
FLASK_ENV=production
DEBUG=false

# 모델 설정
MODEL_NAME=Qwen/Qwen2-VL-7B-Instruct
FALLBACK_MODEL=stabilityai/stable-diffusion-xl-base-1.0

# GPU 설정
USE_CUDA=true
TORCH_DTYPE=float16

# 캐시 디렉토리
TORCH_HOME=/app/torch_cache
HF_HOME=/app/huggingface_cache

# 이미지 설정
DEFAULT_WIDTH=1024
DEFAULT_HEIGHT=1024
DEFAULT_STEPS=20
DEFAULT_GUIDANCE=7.5

# 제한값
MAX_WIDTH=2048
MAX_HEIGHT=2048
MAX_STEPS=100
